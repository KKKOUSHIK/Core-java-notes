//
a=10;
b=20;
c=a+b;
System.out.println(c+30);
System.out.println(c+"30");
System.out.println("abcd"+a+b);//abcd1020
System.out.println(10+a+"hii");//20hii
System.out.println(a+b+"123"+10+20);//301231020
System.out.println('a'+'a');//190
